import os

from pylons import config
from {{package}}.lib.suit import suit

def render(template):
    """Provide our own rendering function for PySUIT."""
    filepath = os.path.join(config['suit.templates'],
        os.path.normpath(template)
    )
    try:
        content = open(filepath).read()
    except IOError:
        raise IOError('Template does not exist: %s' % filepath)
    return suit.execute(config['suit.nodes'], content)
__all__ = ['render']